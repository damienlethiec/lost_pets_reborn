<%= simple_form_for @pet do |f| %>
    <%= f.input :name, input_html: { placeholder: "Garfield" }%>
    <%= f.input :address %>
    <%= f.input :found_date, as: :string, input_html: {class: "datepicker"} %>
    <%= f.input :category, as: :select, collection: Pet::CATEGORIES, include_blank:  "Select a category" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
